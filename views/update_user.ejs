<!-- Include Header (Narik dari _header.ejs) -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href = "/"><i class = "fas fa-angle-double-left"></i>All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Jastip</h2>
            <span class="text-light">Form Data Pemesanan Ticket</span>
        </div>



        <!-- Add User Form (Narik dari _form.ejs) -->
        <!-- Form Handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Nama Lengkap</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" value="<%= user.name %>" placeholder="Your Name">
                </div>
                <div class="form-group">
                    <label for="alamat" class="text-light">Alamat</label>
                    <input type="text" name="alamat" value="<%= user.alamat %>" placeholder="Your Adress">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.email %>" placeholder="example@gmail.com">
                </div>
                <div class="form-group">
                    <label for="nowhatsapp" class="text-light">No.Whatsapp</label>
                    <input type="text" name="nowhatsapp" value="<%= user.nowhatsapp %>" placeholder="62xxxxxxxxxx">
                </div>
                <div class="form-group">
                    <label for="jumlahtiket" class="text-light">Jumlah Tiket</label>
                    <input type="text" name="jumlahtiket" value="<%= user.jumlahtiket %>" placeholder="Masukan jumlah tiket (angka)">
                </div>
                <div class="form-group">
                    <label for="section" class="text-light">Section</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="section" value="Reguler" <%= user.section == 'Reguler' ? 'checked' : '' %>>
                        <label for="radio-2" class="radio-label">Reguler</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="section" value="VIP" <%= user.section == 'VIP' ? 'checked' : '' %>>
                        <label for="radio-3" class="radio-label">VIP</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="payment" class="text-light">Payment</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="payment" value="Transfer Bank" <%= user.payment == 'Transfer Bank' ? 'checked' : '' %>>
                        <label for="radio-4" class="radio-label">Transfer Bank</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="payment" value="E-Wallet" <%= user.payment == 'E-Wallet' ? 'checked' : '' %>>
                        <label for="radio-5" class="radio-label">E-Wallet</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>

<!-- Include footer (Narik dari _footer.ejs) -->
<%- include('include/_footer') %>
<!-- /include footer -->